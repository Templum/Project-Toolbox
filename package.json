{
  "name": "lib-of-commons",
  "version": "0.1.2",
  "description": "A Utility Library for Typescript that offers a variety of Decorators. That solve common tasks, hence the name Lib of Commons, like logging or parameter validation and many more.",
  "main": "lib.ts",
  "scripts": {
    "build": "tsc",
    "generate:docs": "typedoc --theme markdown --mdEngine github --out docs ./lib/",
    "check:linter": "tslint -p .",
    "check:security": "npm audit --only=prod",
    "fix:linter": "tslint -p . --fix",
    "fix:security": "npm audit fix --only=prod",
    "test": "jest --coverage",
    "prepublishOnly": "npm run test && npm run build"
  },
  "author": "Simon Pelczer <templum.dev@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "10.0.3",
    "typedoc": "0.14.2",
    "typedoc-plugin-markdown": "1.2.0",
    "jest": "^24.7.1",
    "ts-jest": "^24.0.2",
    "typescript": "3.4.4"
  },
  "files": [
    "/dist",
    "README.md"
  ]
}